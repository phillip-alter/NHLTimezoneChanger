{
  "name": "NHL Timezone Changer",
  "description": "Changes the timezone on NHL.com",
  "version": "0.5.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "nhltimezone.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://www.nhl.com/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}